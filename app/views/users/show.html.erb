<h1><%= @user.user_name %></h1>
<h2>My Reviews</h2>
<%= button_to "Leave a Review", new_review_path, method: :get%>

<% @user.reviews.each do |review|%>
    <h3><%=link_to review.restaurant.name, restaurant_path(review.restaurant) %></h3>
   <li><%= review.title %></li><br>
    <%= review.content%>
    <%= button_to "Edit Review", edit_review_path(review.id), method: :get%>
    <%= button_to "Delete This Review", review_path(review.id), method: :delete%>
    <%end%>

    <%= button_to "Edit Profile", edit_user_path(@user), method: :get%>
    <%= button_to "Delete This User", user_path(@user), method: :delete%>

