<h2>Review A Restaurant</h2>

<% if @errors%>
 <%= @errors.map do |error|%>
    <%= error %>
    <%end%> 
<%end%> 

<%= form_for @review do |f| %>
    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :user_name %> 
    <%= f.label :restaurant %>
    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %> 

    <%= f.label :title %>
    <%= f.text_area :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
   <%= f.submit "Submit" %>

<% end %>

